{
    "name": "Scripting API Demo",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "scripting",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "http://localhost:3000/*"
    ],
    "action": {
        "default_title": "Click Me",   
        "default_popup": "popup.html"  
    }
  }